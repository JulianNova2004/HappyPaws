<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="20dp"
    tools:context=".StartSendingUbication">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seleccione el id de la mascota\nque estÃ¡ paseando"
        android:textSize="24sp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/petIdUbication"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:hint="ID de mascota"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btnStartSendUbication"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Pet's Location"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/dataSended"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/btnStopSendUbication"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Pet's Location"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"/>

</LinearLayout>