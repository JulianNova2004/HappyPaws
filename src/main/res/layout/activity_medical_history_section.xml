<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MedicalHistorySection">

    <TextView
        android:id="@+id/titleUsrM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="20dp"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/add_consultation_medical_history"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:onClick="sendActivityAddConsultationMedicalHistory"
                android:padding="12dp"
                android:text="@string/addConsultation" />

            <Button
                android:id="@+id/view_medical_history"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:onClick="sendActivityViewMedicalHistory"
                android:padding="12dp"
                android:text="@string/viewMedicalHistory" />

            <Button
                android:id="@+id/view_all_medical_histories"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:onClick="sendActivityViewAllMedicalHistories"
                android:padding="12dp"
                android:text="@string/viewAllMedicalHistories" />

            <Button
                android:id="@+id/modify_medical_history"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:onClick="sendActivityModifyMedicalHistory"
                android:padding="12dp"
                android:text="@string/modifyMedicalHistory" />

            <Button
                android:id="@+id/delete_medical_history"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:onClick="sendActivityDeleteMedicalHistory"
                android:padding="12dp"
                android:text="@string/deleteMedicalHistory" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>