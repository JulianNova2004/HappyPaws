<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".VaccineSection">

    <TextView
        android:id="@+id/titleUsrV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="20dp"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/vaccine_date_register"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:onClick="sendActivityVaccineDateRegister"
                android:padding="12dp"
                android:text="@string/registerVaccine" />

            <Button
                android:id="@+id/view_vaccine"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:onClick="sendActivityViewVaccine"
                android:padding="12dp"
                android:text="@string/viewVaccine" />

            <Button
                android:id="@+id/view_all_vaccine"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:onClick="sendActivityViewAllVaccines"
                android:padding="12dp"
                android:text="@string/viewAllVacines" />

            <Button
                android:id="@+id/modify_vaccine"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:onClick="sendActivityModifyVaccine"
                android:padding="12dp"
                android:text="@string/modifyVaccine" />

            <Button
                android:id="@+id/delete_vaccine"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:onClick="sendActivityDeleteVaccine"
                android:padding="12dp"
                android:text="@string/deleteVaccine" />


        </LinearLayout>
    </ScrollView>

</LinearLayout>